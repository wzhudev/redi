{
  "git": {
    "commitMessage": "release: release v${version}",
    "tagName": "v${version}",
    "addUntrackedFiles": true
  },
  "npm": false,
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    }
  }
}
