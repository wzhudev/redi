{
  "schema": "https://raw.githubusercontent.com/wzhudev/squirrel/master/src/schema/package.schema.json",
  "name": "@wendellhu/redi",
  "version": "0.18.3",
  "description": "A dependency library for TypeScript and JavaScript, along with a binding for React.",
  "author": "Wenzhao Hu<wzhudev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "watch": "vitest",
    "build": "squirrel",
    "release": "release-it",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev:doc": "pnpm --filter redi-site dev",
    "build:doc": "pnpm --filter redi-site build"
  },
  "squirrel": {
    "copyFiles": [
      "README.md",
      "LICENSE"
    ]
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@release-it/conventional-changelog": "^10.0.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@vitest/coverage-istanbul": "^3.1.4",
    "@wendellhu/squirrel": "^0.1.8",
    "eslint": "9.27.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "release-it": "^19.0.2",
    "rxjs": "^7.8.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
