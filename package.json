{
  "name": "@wendellhu/redi",
  "version": "0.19.0",
  "description": "A dependency library for TypeScript and JavaScript, along with a binding for React.",
  "author": "Evan<wzhudev@gmail.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "CHANGELOG.md",
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react-bindings": {
      "types": "./dist/react-bindings/index.d.ts",
      "import": "./dist/react-bindings/index.mjs",
      "require": "./dist/react-bindings/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "watch": "vitest",
    "build": "rolldown build -c rolldown.config.ts",
    "release": "release-it",
    "prettier": "prettier --write ./src ./test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev:doc": "pnpm --filter redi-site dev",
    "build:doc": "pnpm --filter redi-site build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@release-it/conventional-changelog": "^10.0.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@vitest/coverage-istanbul": "^3.1.4",
    "@wendellhu/squirrel": "^0.1.8",
    "eslint": "9.27.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "release-it": "^19.0.2",
    "rolldown": "1.0.0-beta.24",
    "rolldown-plugin-dts": "^0.13.13",
    "rxjs": "^7.8.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wzhudev/redi.git"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
